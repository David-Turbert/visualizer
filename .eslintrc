{
  "env": {
    "browser": true,
    "amd": true
  },
  "rules": {
    "comma-dangle": [2, "never"],
    "indent": [2, 4],
    "no-constant-condition": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-ex-assign": 2,
    "no-extra-semi": 2,
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"],
    "semi-spacing": [2, {"before": false, "after": true}],
    "strict": [2, "global"],
    "valid-typeof": 2
  }
}